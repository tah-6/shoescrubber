    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "./"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
} 